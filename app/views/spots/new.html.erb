<%= simple_form_for(@spot) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :longitude %>
  <%= f.input :latitude %>
  <%= f.input :facility %>
  <%= f.label :category %>
  <%= f.select(:category, ['Scuba diving', 'Snorkling'], {}, {:class => 'form-control'}) %>
  <%= f.label :difficulty %>
  <%= f.select(:difficulty, ['Beginner', 'Intermediate', 'Expert'], {}, {:class => 'form-control'}) %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
<% end %>


