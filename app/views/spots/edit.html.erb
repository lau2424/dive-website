<div class="d-contenaire">

  <div class="bgblur">
    <div class="d-box">
      <%= simple_form_for(@spot) do |f| %>
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :address,
        input_html: {data: {address_autocomplete_target: "address"}, class:"d-none"},
        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
      %>
      <%= f.input :longitude, input_html: {value: params["lng"], class:"d-none"} %>
      <%= f.input :latitude, input_html: {value: params["lat"], class:"d-none"} %>
      <%= f.input :category, as: :radio_buttons, collection: [['Scuba Diving', 'Scuba Diving'], ['Snorkeling', 'Snorkeling'], ['Scuba Diving & Snorkeling', 'Scuba Diving & Snorkeling']], label_method: :second, value_method: :first %>
      <%= f.input :facility, as: :check_boxes, collection: ['Restaurant', 'Toilet', 'Supermarket', 'Accomodation'], include_hidden: false %>
      <%= f.input :difficulty, as: :radio_buttons, collection: [['0', 'Beginner'], ['1', 'Intermediate'], ['2', 'Expert']], label_method: :second, value_method: :first %>
      <%= f.submit "Confirm", class:"btn-gps" %>
    <% end %>
    </div>
  </div>
</div>

